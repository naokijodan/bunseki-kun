/* ベーススタイル */
* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

body {
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Hiragino Sans', 'Noto Sans JP', sans-serif;
  background: linear-gradient(135deg, #f5a623 0%, #f7931e 100%);
  min-width: 650px;
  min-height: 700px;
}

.container {
  background: #fff;
  border-radius: 12px;
  margin: 8px;
  padding: 16px;
  box-shadow: 0 4px 20px rgba(0, 0, 0, 0.15);
  max-height: calc(100vh - 16px);
  overflow-y: auto;
}

/* ヘッダー */
.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12px;
  padding-bottom: 12px;
  border-bottom: 1px solid #eee;
}

.logo {
  display: flex;
  align-items: center;
  gap: 8px;
}

.logo-icon {
  width: 32px;
  height: 32px;
  border-radius: 6px;
}

.logo h1 {
  font-size: 20px;
  color: #333;
  font-weight: 700;
}

.settings-btn {
  background: none;
  border: none;
  padding: 8px;
  cursor: pointer;
  border-radius: 8px;
  color: #666;
  transition: background 0.2s, color 0.2s;
}

.settings-btn:hover {
  background: #f0f0f0;
  color: #333;
}

/* アラートエリア */
.alert-area {
  background: #fff3e0;
  border: 1px solid #ffcc80;
  border-radius: 8px;
  padding: 12px;
  margin-bottom: 12px;
}

.alert-area .alert-item {
  display: flex;
  align-items: center;
  gap: 8px;
  padding: 8px 0;
  font-size: 13px;
  color: #e65100;
}

.alert-area .alert-item:not(:last-child) {
  border-bottom: 1px solid #ffe0b2;
}

/* タブ */
.tabs {
  display: flex;
  gap: 4px;
  margin-bottom: 16px;
  background: #f5f5f5;
  padding: 4px;
  border-radius: 8px;
}

.tab-btn {
  flex: 1;
  padding: 10px 12px;
  border: none;
  background: transparent;
  border-radius: 6px;
  font-size: 13px;
  font-weight: 600;
  color: #666;
  cursor: pointer;
  transition: all 0.2s;
}

.tab-btn:hover {
  color: #333;
}

.tab-btn.active {
  background: #fff;
  color: #f5a623;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
}

.tab-content {
  display: none;
}

.tab-content.active {
  display: block;
}

/* 入力セクション */
.input-section {
  margin-bottom: 20px;
}

.input-section h2 {
  font-size: 14px;
  color: #333;
  margin-bottom: 4px;
}

.section-hint {
  font-size: 11px;
  color: #999;
  margin-bottom: 12px;
}

/* ファイルアップロード */
.file-upload {
  border: 2px dashed #ddd;
  border-radius: 12px;
  padding: 20px;
  text-align: center;
  cursor: pointer;
  transition: all 0.2s;
}

.file-upload:hover,
.file-upload.dragover {
  border-color: #f5a623;
  background: #fffbf5;
}

.upload-icon {
  font-size: 28px;
  margin-bottom: 6px;
}

.file-upload p {
  color: #666;
  font-size: 13px;
}

.file-upload .sub-text {
  font-size: 11px;
  color: #999;
  margin-top: 4px;
}

/* ファイル情報 */
.file-info {
  display: flex;
  align-items: center;
  gap: 8px;
  padding: 12px;
  background: #f0fdf4;
  border: 1px solid #86efac;
  border-radius: 8px;
  margin-top: 8px;
}

.file-info .file-name {
  font-size: 13px;
  color: #166534;
  font-weight: 500;
}

.file-info .file-count {
  font-size: 12px;
  color: #15803d;
  margin-left: auto;
}

.file-info .clear-btn {
  background: none;
  border: none;
  color: #dc2626;
  cursor: pointer;
  font-size: 16px;
  padding: 4px 8px;
  border-radius: 4px;
}

.file-info .clear-btn:hover {
  background: #fee2e2;
}

/* ボタン */
.primary-btn {
  width: 100%;
  padding: 14px;
  margin-top: 16px;
  background: linear-gradient(135deg, #f5a623 0%, #f7931e 100%);
  border: none;
  border-radius: 8px;
  color: #fff;
  font-size: 15px;
  font-weight: 600;
  cursor: pointer;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8px;
  transition: transform 0.2s, box-shadow 0.2s;
}

.primary-btn:hover:not(:disabled) {
  transform: translateY(-1px);
  box-shadow: 0 4px 12px rgba(245, 166, 35, 0.4);
}

.primary-btn:disabled {
  opacity: 0.5;
  cursor: not-allowed;
  transform: none;
  box-shadow: none;
}

.analyze-hint {
  font-size: 11px;
  color: #999;
  text-align: center;
  margin-top: 8px;
}

.secondary-btn {
  width: 100%;
  padding: 12px;
  margin-top: 16px;
  background: #f5f5f5;
  border: 1px solid #ddd;
  border-radius: 8px;
  color: #333;
  font-size: 14px;
  font-weight: 600;
  cursor: pointer;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8px;
  transition: background 0.2s;
}

.secondary-btn:hover {
  background: #eee;
}

.btn-icon {
  font-size: 16px;
}

/* 集計サマリー */
.summary-cards {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 10px;
  margin-bottom: 20px;
}

.summary-card {
  background: linear-gradient(135deg, #f5a623 0%, #f7931e 100%);
  border-radius: 10px;
  padding: 12px 8px;
  text-align: center;
  color: #fff;
}

.card-value {
  font-size: 22px;
  font-weight: 700;
}

.card-label {
  font-size: 10px;
  opacity: 0.9;
  margin-top: 2px;
}

/* グラフセクション */
.chart-section {
  margin-bottom: 20px;
}

.chart-section h3,
.list-section h3 {
  font-size: 14px;
  color: #333;
  margin-bottom: 12px;
}

.chart-container {
  background: #fafafa;
  border-radius: 8px;
  padding: 16px;
  height: 220px;
}

.chart-container.chart-tall {
  height: 300px;
}

.chart-container.chart-scrollable {
  height: auto;
  min-height: 300px;
  max-height: 600px;
  overflow-y: auto;
}

/* ブランドヘッダー */
.brand-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-wrap: wrap;
  gap: 8px;
  margin-bottom: 4px;
}

.brand-header h3 {
  margin: 0;
}

.brand-filter {
  display: flex;
  align-items: center;
  gap: 6px;
}

.brand-filter label {
  font-size: 11px;
  color: #666;
}

.brand-filter select {
  padding: 4px 8px;
  border: 1px solid #ddd;
  border-radius: 4px;
  font-size: 12px;
  background: #fff;
  cursor: pointer;
}

.brand-filter select:focus {
  outline: none;
  border-color: #f5a623;
}

/* リストセクション */
.list-section {
  margin-bottom: 20px;
}

.ranking-list {
  background: #fafafa;
  border-radius: 8px;
  padding: 12px;
}

.ranking-item {
  display: flex;
  align-items: center;
  gap: 10px;
  padding: 10px;
  background: #fff;
  border-radius: 6px;
  margin-bottom: 8px;
  font-size: 12px;
}

.ranking-item:last-child {
  margin-bottom: 0;
}

.ranking-item .rank {
  width: 24px;
  height: 24px;
  background: #f5a623;
  color: #fff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: 700;
  font-size: 11px;
}

.ranking-item .rank.top3 {
  background: #ff6b35;
}

.ranking-item .title {
  flex: 1;
  color: #333;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.ranking-item .watchers {
  font-weight: 600;
  color: #f5a623;
  white-space: nowrap;
}

/* AI提案セクション */
.ai-section {
  min-height: 300px;
}

.ai-status {
  text-align: center;
  padding: 40px 20px;
  color: #999;
}

.ai-results {
  display: flex;
  flex-direction: column;
  gap: 16px;
}

.ai-card {
  background: #fafafa;
  border-radius: 10px;
  padding: 16px;
  border-left: 4px solid;
}

.ai-card.alert {
  border-left-color: #ef4444;
  background: #fef2f2;
}

.ai-card.strength {
  border-left-color: #4caf50;
}

.ai-card.review {
  border-left-color: #ff9800;
}

.ai-card.opportunity {
  border-left-color: #2196f3;
}

.ai-card.suggestion {
  border-left-color: #9c27b0;
}

.ai-card h3 {
  font-size: 14px;
  color: #333;
  margin-bottom: 12px;
}

.ai-list {
  display: flex;
  flex-direction: column;
  gap: 8px;
}

.ai-list-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 8px 12px;
  background: #fff;
  border-radius: 6px;
  font-size: 13px;
}

.ai-list-item .name {
  font-weight: 500;
  color: #333;
}

.ai-list-item .value {
  color: #666;
  font-size: 12px;
}

.ai-text {
  font-size: 13px;
  line-height: 1.6;
  color: #333;
}

/* ローディング */
.loading {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(255, 255, 255, 0.95);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.spinner {
  width: 40px;
  height: 40px;
  border: 3px solid #eee;
  border-top-color: #f5a623;
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
}

@keyframes spin {
  to {
    transform: rotate(360deg);
  }
}

.loading p {
  margin-top: 16px;
  color: #666;
  font-size: 14px;
}

/* ユーティリティ */
.hidden {
  display: none !important;
}

/* スクロールバー */
::-webkit-scrollbar {
  width: 6px;
  height: 6px;
}

::-webkit-scrollbar-track {
  background: #f0f0f0;
  border-radius: 3px;
}

::-webkit-scrollbar-thumb {
  background: #ccc;
  border-radius: 3px;
}

::-webkit-scrollbar-thumb:hover {
  background: #999;
}

/* ========================================
   不明商品アラート・AI判定
======================================== */

.unknown-alert {
  background: linear-gradient(135deg, #fff3cd 0%, #ffeeba 100%);
  border: 1px solid #ffc107;
  border-radius: 10px;
  padding: 16px;
  margin-bottom: 16px;
}

.unknown-alert-header {
  display: flex;
  align-items: center;
  gap: 8px;
  font-size: 15px;
  font-weight: 600;
  color: #856404;
  margin-bottom: 8px;
}

.unknown-icon {
  font-size: 18px;
}

.unknown-hint {
  font-size: 12px;
  color: #856404;
  margin-bottom: 12px;
}

.ai-classify-btn {
  width: 100%;
  padding: 12px 16px;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  border: none;
  border-radius: 8px;
  font-size: 14px;
  font-weight: 600;
  cursor: pointer;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8px;
  transition: all 0.2s;
}

.ai-classify-btn:hover {
  transform: translateY(-1px);
  box-shadow: 0 4px 12px rgba(102, 126, 234, 0.4);
}

.ai-classify-btn:disabled {
  background: #ccc;
  cursor: not-allowed;
  transform: none;
  box-shadow: none;
}

.ai-progress {
  margin-top: 12px;
}

.progress-bar {
  width: 100%;
  height: 8px;
  background: #e0e0e0;
  border-radius: 4px;
  overflow: hidden;
  margin-bottom: 6px;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 4px;
  transition: width 0.3s ease;
  width: 0%;
}

#aiProgressText {
  font-size: 12px;
  color: #666;
}

/* AI判定サマリー */
.ai-classification-summary {
  background: linear-gradient(135deg, #e8f5e9 0%, #c8e6c9 100%);
  border-radius: 10px;
  padding: 14px;
  margin-top: 12px;
  border: 1px solid #a5d6a7;
}

.summary-header {
  display: flex;
  align-items: center;
  gap: 8px;
  margin-bottom: 12px;
  flex-wrap: wrap;
}

.summary-icon {
  font-size: 18px;
}

.summary-title {
  font-weight: 600;
  color: #2e7d32;
}

.summary-count {
  background: #4caf50;
  color: white;
  padding: 2px 8px;
  border-radius: 12px;
  font-size: 12px;
  font-weight: 500;
}

.summary-time {
  font-size: 11px;
  color: #666;
  margin-left: auto;
}

.summary-content {
  display: flex;
  flex-direction: column;
  gap: 10px;
}

.summary-section {
  background: rgba(255, 255, 255, 0.7);
  border-radius: 8px;
  padding: 10px;
}

.summary-section-title {
  font-size: 11px;
  color: #555;
  margin-bottom: 6px;
  font-weight: 500;
}

.summary-list {
  display: flex;
  flex-wrap: wrap;
  gap: 6px;
}

.summary-tag {
  display: inline-flex;
  align-items: center;
  gap: 4px;
  padding: 4px 10px;
  border-radius: 14px;
  font-size: 12px;
  font-weight: 500;
}

.summary-tag small {
  font-weight: 400;
  opacity: 0.8;
}

.brand-tag {
  background: #e3f2fd;
  color: #1565c0;
}

.category-tag {
  background: #fce4ec;
  color: #c2185b;
}

.summary-more {
  font-size: 11px;
  color: #666;
  padding: 4px 8px;
}

/* ========================================
   市場比較タブ
======================================== */

.market-section {
  display: flex;
  flex-direction: column;
  gap: 20px;
}

/* ハイライト設定 */
.highlight-settings {
  background: #f8f9fa;
  border-radius: 10px;
  padding: 16px;
}

.highlight-settings h3 {
  font-size: 14px;
  margin-bottom: 4px;
}

.toggle-setting {
  margin: 12px 0;
}

.toggle-setting label {
  display: flex;
  align-items: center;
  gap: 10px;
  cursor: pointer;
}

.toggle-setting input[type="checkbox"] {
  width: 18px;
  height: 18px;
  accent-color: #f5a623;
}

.toggle-label {
  font-size: 13px;
  color: #333;
}

/* ハイライト凡例 */
.highlight-legend {
  display: flex;
  flex-direction: column;
  gap: 8px;
  margin-top: 12px;
  padding-top: 12px;
  border-top: 1px solid #e0e0e0;
}

.legend-item {
  display: flex;
  align-items: center;
  gap: 10px;
  font-size: 12px;
  color: #666;
}

.legend-color {
  width: 20px;
  height: 12px;
  border-radius: 3px;
}

.legend-color.strong {
  background: linear-gradient(135deg, rgba(76, 175, 80, 0.4) 0%, rgba(129, 199, 132, 0.4) 100%);
  border-bottom: 2px solid #4caf50;
}

.legend-color.opportunity {
  background: linear-gradient(135deg, rgba(255, 193, 7, 0.4) 0%, rgba(255, 224, 130, 0.4) 100%);
  border-bottom: 2px solid #ffc107;
}

.legend-color.price-alert {
  background: linear-gradient(135deg, rgba(255, 152, 0, 0.4) 0%, rgba(255, 183, 77, 0.4) 100%);
  border-bottom: 2px solid #ff9800;
}

.legend-color.owned {
  background: rgba(76, 175, 80, 0.15);
  border-bottom: 1px dashed #81c784;
}

.legend-color.excluded {
  background: rgba(158, 158, 158, 0.3);
  text-decoration: line-through;
}

/* 市場データ取得 */
.market-capture {
  background: #fff;
  border: 1px solid #e0e0e0;
  border-radius: 10px;
  padding: 16px;
}

.market-capture h3 {
  font-size: 14px;
  margin-bottom: 4px;
}

.url-input-group {
  display: flex;
  gap: 8px;
  margin-top: 12px;
}

.url-input {
  flex: 1;
  padding: 10px 12px;
  border: 1px solid #ddd;
  border-radius: 8px;
  font-size: 13px;
}

.url-input:focus {
  outline: none;
  border-color: #f5a623;
  box-shadow: 0 0 0 2px rgba(245, 166, 35, 0.1);
}

.url-input::placeholder {
  color: #aaa;
  font-size: 12px;
}

.url-input-group .primary-btn {
  white-space: nowrap;
  padding: 10px 16px;
}

.market-info {
  margin-top: 12px;
  padding: 12px;
  background: #e8f5e9;
  border-radius: 8px;
  font-size: 13px;
  color: #2e7d32;
}

.market-info-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.time-label {
  font-size: 11px;
  color: #666;
}

/* 強み・弱みセクション */
.strength-weakness {
  background: #fff;
  border: 1px solid #e0e0e0;
  border-radius: 10px;
  padding: 16px;
}

.strength-weakness h3 {
  font-size: 14px;
  margin-bottom: 12px;
}

.no-data-message {
  text-align: center;
  padding: 20px;
  color: #999;
}

.no-data-message p {
  margin: 0;
}

.no-data-message .hint {
  font-size: 12px;
  margin-top: 8px;
}

/* 強み・弱みカード */
.sw-card {
  margin-bottom: 12px;
  padding: 12px;
  border-radius: 8px;
}

.sw-card:last-child {
  margin-bottom: 0;
}

.sw-card h4 {
  font-size: 12px;
  margin-bottom: 8px;
  color: #333;
}

.sw-card.strong {
  background: #e8f5e9;
  border-left: 3px solid #4caf50;
}

.sw-card.weak {
  background: #fff3e0;
  border-left: 3px solid #ff9800;
}

.sw-card.opportunity {
  background: #fffde7;
  border-left: 3px solid #ffc107;
}

.sw-card.market-top {
  background: #fce4ec;
  border-left: 3px solid #e91e63;
}

.sw-card.market-category {
  background: #e3f2fd;
  border-left: 3px solid #2196f3;
}

/* 市場データサマリー */
.market-summary {
  background: #fff;
  border: 1px solid #e0e0e0;
  border-radius: 10px;
  padding: 16px;
  margin-bottom: 16px;
}

.market-summary h3 {
  font-size: 14px;
  margin-bottom: 12px;
}

/* AI分類ボタン（市場データ） */
.ai-classify-market {
  display: flex;
  align-items: center;
  gap: 12px;
  padding: 10px;
  background: #fff3e0;
  border-radius: 8px;
  margin-bottom: 12px;
  flex-wrap: wrap;
}

.ai-classify-market .classify-info {
  font-size: 12px;
  color: #e65100;
}

.ai-classify-market .classify-info span {
  font-weight: bold;
}

.ai-classify-btn.small {
  padding: 6px 12px;
  font-size: 11px;
}

.ai-classify-market .ai-progress {
  flex: 1;
  min-width: 150px;
}

.market-price-info {
  display: flex;
  gap: 24px;
  margin-top: 12px;
  padding: 10px;
  background: #f5f5f5;
  border-radius: 6px;
}

.price-stat {
  display: flex;
  align-items: center;
  gap: 8px;
}

.price-label {
  font-size: 11px;
  color: #666;
}

.price-value {
  font-size: 14px;
  font-weight: bold;
  color: #2196f3;
}

.time-value {
  font-size: 11px;
  color: #999;
}

.category-distribution {
  display: flex;
  flex-direction: column;
  gap: 6px;
}

.category-bar {
  display: flex;
  align-items: center;
  gap: 8px;
}

.category-bar-name {
  width: 100px;
  font-size: 11px;
  color: #333;
  flex-shrink: 0;
}

.category-bar-fill {
  flex: 1;
  height: 16px;
  background: #e3f2fd;
  border-radius: 4px;
  position: relative;
  overflow: hidden;
}

.category-bar-fill .fill {
  height: 100%;
  background: linear-gradient(90deg, #2196f3, #64b5f6);
  border-radius: 4px;
  transition: width 0.3s ease;
}

.category-bar-count {
  width: 50px;
  text-align: right;
  font-size: 11px;
  color: #666;
  flex-shrink: 0;
}

/* ブランド×カテゴリ分析（市場比較） */
.brand-category-summary .summary-item.market {
  color: #e91e63;
}

.comparison-chart-section h5 {
  font-size: 12px;
  color: #666;
  margin-bottom: 8px;
}

.category-insight {
  margin-top: 16px;
  padding: 12px;
